@model IEnumerable<Autozam.Models.Category>

@{
    ViewBag.Title = "Asortyment";
}

@*<h2>Asortyment</h2>*@
<div id="categorylist"
<ul>
@foreach (var item in Model.OrderBy(m=> m.Order).ThenBy(m=> m.Name)) {
    
            <li id="@item.Name.Replace(' ','_')">
                <a href="Kategoria/@item.Id"><div><img src="@Href("~/images/categories/"+item.Id+"/logo.jpg")" alt="@item.Name" /><br />@item.Name
                </div></a></li>
}
