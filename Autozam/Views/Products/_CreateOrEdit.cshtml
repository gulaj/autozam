    tinyMCE.init({
        mode: "textareas",
        theme: "advanced",
        plugins: "autolink,lists,pagebreak,style,layer,table,advlink,inlinepopups,insertdatetime,preview,paste,fullscreen,noneditable,visualchars,nonbreaking,template",
        width: "980",
